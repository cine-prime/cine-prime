generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  nome      String?
  cpf       String     @unique
  telefone  String?
  email     String     @unique
  password  String
  isAdmin   Boolean    @default(false)
  profile   ProfileType @default(client)
  //carrinhos Carrinho[]
  //Reserva   Reserva[]
}

model Movie {
  id             Int      @id @default(autoincrement())
  name           String
  genre          String
  duration       Int
  classification String
  synopsis       String
}

model Room {
  id                      Int      @id @default(autoincrement())
  qtd_max                 Int
  typeExhibitionAccepted  String
}

model Session {
  id            Int      @id @default(autoincrement())
  dateTime      DateTime
  idRoom        Int
  idFilm        Int
  exibitionType String
  dublingType   String
}


enum ProfileType {
  employee
  client
}
