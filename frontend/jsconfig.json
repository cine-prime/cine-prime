{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,

        /*Bundler  mode*/
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*", "./dist/*", ""],
            "@pages/*": ["./src/pages/*"],
            "@services/*": ["./src/services/*"],
            "@components/*": ["./src/components/*"],
            "@hooks/*": ["./src/hooks/*"]
        }
    },
    "include": ["src"],
    "exclude": ["./node_modules/*", "dist"]
}
